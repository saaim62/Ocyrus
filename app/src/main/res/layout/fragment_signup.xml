<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_16sdp"
        android:background="#FBFAFA">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_back_long" />


                <ScrollView
                    android:layout_width="match_parent"
                    android:fillViewport="true"
                    android:scrollbars="none"
                    android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                   >

                    <RelativeLayout
                        android:id="@+id/chnageImage"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="center">

                        <com.app.ocyrus.utills.CircleImageView
                            android:id="@+id/user"
                            android:layout_width="@dimen/_84sdp"
                            android:layout_height="@dimen/_84sdp"
                            app:civ_border_color="@color/grey"
                            android:layout_centerInParent="true"
                            app:civ_border_width="1dp"
                            android:src="@drawable/profile"
                            />

                       <ImageView
                           android:layout_width="@dimen/_36sdp"
                           android:layout_height="@dimen/_36sdp"
                           android:layout_alignParentBottom="true"
                           android:layout_alignParentEnd="true"
                           android:src="@drawable/change_profilepic"
                           />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Create Account"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/_20ssp"
                        android:textColor="@color/colorTextBlack"
                        android:padding="5dp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:textColor="@color/gray"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/_14ssp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="First Name"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"/>
                    <EditText
                        android:id="@+id/edt_fname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/edittext_border"
                        android:inputType="text"
                        android:textColor="@color/dark_grey"
                        android:fontFamily="@font/poppins_regular"
                        android:textColorHint="@color/gray"
                        android:maxLength="50"
                        android:padding="5sp"
                        android:singleLine="true"
                        android:textSize="@dimen/_14ssp" />
                    <TextView
                        android:textColor="@color/gray"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/_14ssp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="Last Name"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"/>
                    <EditText
                        android:id="@+id/edt_lName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/edittext_border"
                        android:inputType="text"
                        android:maxLength="40"
                        android:textColor="@color/dark_grey"
                        android:fontFamily="@font/poppins_regular"
                        android:textColorHint="@color/gray"
                        android:padding="5sp"
                        android:singleLine="true"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:textColor="@color/gray"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/_14ssp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="Email"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"/>

                    <EditText
                        android:id="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/edittext_border"
                        android:inputType="textEmailAddress"
                        android:maxLength="40"
                        android:textColor="@color/dark_grey"
                        android:fontFamily="@font/poppins_regular"
                        android:textColorHint="@color/gray"
                        android:padding="5sp"
                        android:singleLine="true"
                        android:textSize="@dimen/_14ssp" />
                    <TextView
                        android:textColor="@color/gray"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/_14ssp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="Phone Number"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"/>

                    <EditText
                        android:id="@+id/edtPhone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/edittext_border"
                        android:inputType="phone"
                        android:maxLength="14"
                        android:textColor="@color/dark_grey"
                        android:fontFamily="@font/poppins_regular"
                        android:textColorHint="@color/gray"
                        android:padding="5sp"
                        android:singleLine="true"
                        android:textSize="@dimen/_14ssp" />
                    <TextView
                        android:textColor="@color/gray"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/_14ssp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="Password"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_border"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <EditText
                            android:id="@+id/edt_password"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:inputType="textPassword"
                            android:maxLength="40"
                            android:background="@android:color/transparent"
                            android:textColor="@color/dark_grey"
                            android:fontFamily="@font/poppins_regular"
                            android:textColorHint="@color/gray"
                            android:padding="5sp"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:textSize="@dimen/_14ssp" />
                        <ImageView
                            android:id="@+id/password_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_hide_password"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/btnRegister"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="8dp"
                        android:textSize="@dimen/_14ssp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/pink_button_bg"
                        android:text="@string/sign_up"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:padding="8dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:textColor="@color/gray"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="@dimen/_14ssp"
                            android:text="Are you already registered ?"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tvlogin"
                            android:textColor="@color/app_green"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="@dimen/_14ssp"
                            android:text="Login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

                </ScrollView>

            </LinearLayout>




    </RelativeLayout>
</layout>