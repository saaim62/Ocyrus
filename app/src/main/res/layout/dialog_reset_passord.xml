<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/bottomSheetResetPassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_transparent_50"
        android:gravity="bottom"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="@dimen/_16sdp"
        android:background="@color/white"
        android:orientation="vertical">


            <TextView
                android:textColor="@color/gray"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_16ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Reset Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/gray"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/resetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/gray"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_14ssp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="New Password"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/edt_password"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:inputType="textPassword"
                android:maxLength="40"
                android:background="@android:color/transparent"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/poppins_regular"
                android:textColorHint="@color/gray"
                android:padding="5sp"
                android:singleLine="true"
                android:layout_weight="1"
                android:textSize="@dimen/_14ssp" />
            <ImageView
                android:id="@+id/password_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_hide_password"
                />
        </LinearLayout>

        <TextView
            android:textColor="@color/gray"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_14ssp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Confirm Password"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/edt_confPassword"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:inputType="textPassword"
                android:maxLength="40"
                android:background="@android:color/transparent"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/poppins_regular"
                android:textColorHint="@color/gray"
                android:padding="5sp"
                android:singleLine="true"
                android:layout_weight="1"
                android:textSize="@dimen/_14ssp" />
            <ImageView
                android:id="@+id/conf_password_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_hide_password"
                />
        </LinearLayout>

         <TextView
                android:id="@+id/btnDone"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:padding="8dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:textSize="@dimen/_14ssp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/pink_button_bg"
                android:text="Submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"/>


        </LinearLayout>
    </LinearLayout>

</layout>