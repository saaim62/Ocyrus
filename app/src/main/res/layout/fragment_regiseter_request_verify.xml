<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_16sdp"
        android:background="@color/white"
        android:orientation="vertical">
        <!--back-->
        <!--back-->
        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Back to login"
                android:fontFamily="@font/bodoni_svtytwo_itc_tt_book"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/tv_text_color"
                android:padding="5dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <TextView
                    android:textColor="@color/black"
                    android:fontFamily="@font/bodoni_svtytwo_itc_tt_book"
                    android:textSize="@dimen/_18ssp"
                    android:text="One Last Step..."
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@color/gray"
                    android:fontFamily="@font/bodoni_svtytwo_itc_tt_book"
                    android:textSize="@dimen/_18ssp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:gravity="center"
                    android:text="@string/requestRegisterText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <TextView
                    android:id="@+id/btnGotoEmial"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:minWidth="@dimen/_150sdp"
                    android:padding="8dp"
                    android:fontFamily="@font/bodoni_svtytwo_itc_tt_book"
                    android:gravity="center"
                    android:textSize="@dimen/_14ssp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@drawable/pink_button_bg"
                    android:text="Go To Login"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"/>


            </LinearLayout>
        </ScrollView>




         </LinearLayout>


</layout>